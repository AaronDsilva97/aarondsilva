---
import Layout from '../layouts/Layout.astro';
import BentoGrid from '../components/BentoGrid.astro';
import HeroIntro from '../components/HeroIntro.tsx';
import AvailabilityWidget from '../components/AvailabilityWidget.tsx';
import CommandHint from '../components/CommandHint.astro';
import CurrentProject from '../components/CurrentProject.tsx';
import ConnectCard from '../components/ConnectCard.astro';
import RecentProjects from '../components/RecentProjects.astro';
import TechStack from '../components/TechStack.astro';
import RecentPosts from '../components/RecentPosts.astro';
import CommandPalette from '../components/CommandPalette.tsx';
import MetricsCard from '../components/MetricsCard.tsx';
import HealthcareExpertise from '../components/HealthcareExpertise.tsx';
import AIExpertise from '../components/AIExpertise.tsx';
import SecurityExpertise from '../components/SecurityExpertise.tsx';
import Itihaas from '../components/Itihaas.tsx';
import Aplify from '../components/Aplify.tsx';
import CertificationsCard from '../components/CertificationsCard.tsx';
import InteractiveBackground from '../components/InteractiveBackground.tsx';
---

<Layout>
  <InteractiveBackground client:load />
  <BentoGrid>
    <HeroIntro slot="hero" client:load />
    <AvailabilityWidget slot="availability" client:load />
    <CommandHint slot="command-hint" />
    <CurrentProject slot="current-project" client:load />
    <ConnectCard slot="github-stats" />
    <CertificationsCard slot="certifications" client:load />
    <TechStack slot="tech-stack" />
    <RecentPosts slot="recent-posts" />
    <MetricsCard slot="metrics" client:load />
    <HealthcareExpertise slot="healthcare-expertise" client:load />
    <AIExpertise slot="ai-expertise" client:load />
    <SecurityExpertise slot="security-expertise" client:load />
    <Aplify slot="aplify" client:load />
    <Itihaas slot="itihaas" client:load />
    <RecentProjects slot="testimonials" data-section="projects" />
  </BentoGrid>
  <CommandPalette client:load />
</Layout>
