---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

type Props = {
  post: CollectionEntry<'blog'>;
};

const { post } = Astro.props;
const { Content } = await post.render();

const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

// Get related posts (same tags)
const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const relatedPosts = allPosts
  .filter(p => p.slug !== post.slug)
  .filter(p => p.data.tags.some(tag => post.data.tags.includes(tag)))
  .slice(0, 3);

const readingTime = Math.ceil(post.body.split(/\s+/).length / 200);
---

<Layout
  title={`${post.data.title} | Aaron D'silva`}
  description={post.data.description}
  type="article"
>
  <article class="container mx-auto px-4 py-8 max-w-4xl sm:px-6 lg:px-8">
    <!-- Back Link -->
    <a href="/blog" class="inline-flex items-center gap-2 text-slate-400 hover:text-purple-400 transition-colors mb-8 group">
      <svg class="w-4 h-4 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      All Posts
    </a>

    <!-- Article Header -->
    <header class="mb-12">
      <div class="flex flex-wrap items-center gap-3 mb-4 text-sm">
        <time datetime={post.data.publishDate.toISOString()} class="text-slate-500 font-mono">
          {formatDate(post.data.publishDate)}
        </time>
        <span class="w-1 h-1 rounded-full bg-slate-600"></span>
        <span class="text-slate-500">{readingTime} min read</span>
        <span class="w-1 h-1 rounded-full bg-slate-600"></span>
        <span class="text-purple-400">{post.data.author}</span>
      </div>

      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-slate-100 leading-tight mb-6">
        {post.data.title}
      </h1>

      <p class="text-lg md:text-xl text-slate-400 leading-relaxed mb-6">
        {post.data.description}
      </p>

      <div class="flex flex-wrap gap-2">
        {post.data.tags.map((tag) => (
          <span class="px-3 py-1 text-xs rounded-full bg-slate-800/50 text-slate-300 border border-slate-700/50">
            {tag}
          </span>
        ))}
      </div>
    </header>

    <!-- Article Content -->
    <div class="prose-container">
      <Content />
    </div>

    <!-- Author Bio -->
    <footer class="mt-16 pt-8 border-t border-slate-800">
      <div class="bento-card p-6">
        <div class="flex items-start gap-4">
          <div class="w-16 h-16 rounded-full overflow-hidden flex-shrink-0 ring-2 ring-purple-500/30">
            <img src="/profile.png" alt="Aaron Dsilva" class="w-full h-full object-cover" />
          </div>
          <div>
            <h3 class="font-semibold text-slate-100 mb-1">Aaron Dsilva</h3>
            <p class="text-sm text-slate-400 mb-3">
              Senior Full Stack Developer building healthcare systems for 100+ hospitals.
              Specializing in AWS, AI integration, and compliance (HIPAA, SOC2, ISO 27001).
            </p>
            <div class="flex gap-3">
              <a href="https://www.linkedin.com/in/aaronxdsilva/" target="_blank" rel="noopener noreferrer" class="text-slate-500 hover:text-purple-400 transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
              <a href="https://github.com/AaronDsilva97" target="_blank" rel="noopener noreferrer" class="text-slate-500 hover:text-purple-400 transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
              <a href="mailto:contact@aarondsilva.me" class="text-slate-500 hover:text-purple-400 transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </footer>

    <!-- Related Posts -->
    {relatedPosts.length > 0 && (
      <section class="mt-12">
        <h2 class="text-xl font-semibold text-slate-100 mb-6">Related Posts</h2>
        <div class="grid gap-4 md:grid-cols-3">
          {relatedPosts.map((relatedPost) => (
            <a href={`/blog/${relatedPost.slug}`} class="bento-card p-4 group block">
              <h3 class="font-medium text-slate-200 group-hover:text-purple-300 transition-colors mb-2 line-clamp-2">
                {relatedPost.data.title}
              </h3>
              <p class="text-sm text-slate-500 line-clamp-2">
                {relatedPost.data.description}
              </p>
            </a>
          ))}
        </div>
      </section>
    )}
  </article>
</Layout>

<style>
  .bento-card {
    background: rgba(30, 41, 59, 0.4);
    border: 1px solid rgba(148, 163, 184, 0.1);
    border-radius: 16px;
    backdrop-filter: blur(20px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .bento-card:hover {
    border-color: rgba(139, 92, 246, 0.4);
    background: rgba(30, 41, 59, 0.6);
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Prose styles for blog content */
  .prose-container {
    color: #cbd5e1; /* slate-300 */
    line-height: 1.8;
    font-size: 1.0625rem;
  }

  .prose-container :global(h1),
  .prose-container :global(h2),
  .prose-container :global(h3),
  .prose-container :global(h4) {
    color: #f1f5f9; /* slate-100 */
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .prose-container :global(h1) {
    font-size: 2rem;
  }

  .prose-container :global(h2) {
    font-size: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(148, 163, 184, 0.1);
  }

  .prose-container :global(h3) {
    font-size: 1.25rem;
  }

  .prose-container :global(h4) {
    font-size: 1.125rem;
  }

  .prose-container :global(p) {
    margin-bottom: 1.5rem;
  }

  .prose-container :global(a) {
    color: #a78bfa; /* purple-400 */
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: color 0.2s ease;
  }

  .prose-container :global(a:hover) {
    color: #c4b5fd; /* purple-300 */
  }

  .prose-container :global(strong) {
    color: #f1f5f9;
    font-weight: 600;
  }

  .prose-container :global(ul),
  .prose-container :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .prose-container :global(ul) {
    list-style-type: disc;
  }

  .prose-container :global(ol) {
    list-style-type: decimal;
  }

  .prose-container :global(li) {
    margin-bottom: 0.5rem;
  }

  .prose-container :global(li::marker) {
    color: #8b5cf6; /* purple-500 */
  }

  .prose-container :global(blockquote) {
    border-left: 3px solid #8b5cf6;
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: #94a3b8; /* slate-400 */
  }

  .prose-container :global(code) {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875em;
    background: rgba(30, 41, 59, 0.8);
    padding: 0.2em 0.4em;
    border-radius: 4px;
    color: #f472b6; /* pink-400 */
    border: 1px solid rgba(148, 163, 184, 0.1);
  }

  .prose-container :global(pre) {
    background: rgba(15, 23, 42, 0.8) !important;
    border: 1px solid rgba(148, 163, 184, 0.1);
    border-radius: 12px;
    padding: 1.25rem;
    margin: 1.5rem 0;
    overflow-x: auto;
    font-size: 0.875rem;
  }

  .prose-container :global(pre code) {
    background: transparent;
    padding: 0;
    border: none;
    color: #e2e8f0;
    font-size: inherit;
  }

  .prose-container :global(hr) {
    border: none;
    border-top: 1px solid rgba(148, 163, 184, 0.1);
    margin: 3rem 0;
  }

  .prose-container :global(img) {
    border-radius: 12px;
    margin: 2rem 0;
    border: 1px solid rgba(148, 163, 184, 0.1);
  }

  .prose-container :global(table) {
    width: 100%;
    margin: 1.5rem 0;
    border-collapse: collapse;
  }

  .prose-container :global(th),
  .prose-container :global(td) {
    padding: 0.75rem 1rem;
    text-align: left;
    border-bottom: 1px solid rgba(148, 163, 184, 0.1);
  }

  .prose-container :global(th) {
    color: #f1f5f9;
    font-weight: 600;
    background: rgba(30, 41, 59, 0.4);
  }

  .prose-container :global(tr:hover td) {
    background: rgba(30, 41, 59, 0.3);
  }

  /* First element shouldn't have top margin */
  .prose-container > :global(:first-child) {
    margin-top: 0;
  }
</style>
