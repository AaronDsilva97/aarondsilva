<style>
  .bento-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: auto;
    gap: 1.5rem;
    grid-template-areas:
      "hero hero availability command-hint"
      "metrics investment investment github-stats"
      "current-project current-project now-playing now-playing"
      "testimonials testimonials certifications certifications"
      "testimonials testimonials itihaas itihaas"
      "recent-posts recent-posts tech-stack tech-stack";
  }

  /* Light mode bento item */
  .bento-item {
    background: rgba(255, 255, 255, 0.7);
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 16px;
    padding: 1.5rem;
    backdrop-filter: blur(20px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .bento-item:hover {
    border-color: rgba(139, 92, 246, 0.4);
    background: rgba(255, 255, 255, 0.9);
    transform: translateY(-4px) scale(1.01);
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.1),
      0 0 20px rgba(139, 92, 246, 0.15);
  }

  /* Dark mode bento item */
  :global(.dark) .bento-item {
    background: rgba(30, 41, 59, 0.4);
    border: 1px solid rgba(148, 163, 184, 0.1);
  }

  :global(.dark) .bento-item:hover {
    background: rgba(30, 41, 59, 0.6);
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.3),
      0 0 20px rgba(139, 92, 246, 0.2);
  }

  .bento-item::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.05) 0%, rgba(236, 72, 153, 0.02) 50%, transparent 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  :global(.dark) .bento-item::before {
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.08) 0%, rgba(236, 72, 153, 0.04) 50%, transparent 100%);
  }

  .bento-item:hover::before {
    opacity: 1;
  }

  .bento-item::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(0, 0, 0, 0.02), transparent);
    transition: left 0.6s ease;
    pointer-events: none;
  }

  :global(.dark) .bento-item::after {
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.05), transparent);
  }

  .bento-item:hover::after {
    left: 100%;
  }

  .hero {
    grid-area: hero;
    min-height: 120px;
  }

  .availability {
    grid-area: availability;
    min-height: 120px;
  }

  .command-hint {
    grid-area: command-hint;
    min-height: 120px;
  }

  .current-project {
    grid-area: current-project;
    min-height: 200px;
  }

  .github-stats {
    grid-area: github-stats;
    min-height: 200px;
  }

  .recent-projects {
    grid-area: recent-projects;
    min-height: 250px;
  }

  .tech-stack {
    grid-area: tech-stack;
    min-height: 150px;
  }

  .now-playing {
    grid-area: now-playing;
    min-height: 200px;
  }

  .recent-posts {
    grid-area: recent-posts;
    min-height: 150px;
  }

  .metrics {
    grid-area: metrics;
    min-height: 120px;
  }

  .investment {
    grid-area: investment;
    min-height: 200px;
  }

  .certifications {
    grid-area: certifications;
    min-height: 140px;
  }

  .itihaas {
    grid-area: itihaas;
    min-height: 140px;
    padding: 0;
    overflow: hidden;
  }

  .testimonials {
    grid-area: testimonials;
    min-height: 250px;
  }

  /* Responsive Design */
  @media (max-width: 1200px) {
    .bento-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 1.25rem;
      grid-template-areas:
        "hero hero availability metrics"
        "current-project current-project github-stats command-hint"
        "investment investment certifications certifications"
        "testimonials testimonials itihaas itihaas"
        "recent-posts recent-posts now-playing now-playing"
        "tech-stack tech-stack tech-stack tech-stack";
    }
  }

  @media (max-width: 768px) {
    .bento-grid {
      grid-template-columns: 1fr;
      grid-template-areas:
        "hero"
        "availability"
        "metrics"
        "command-hint"
        "current-project"
        "github-stats"
        "investment"
        "certifications"
        "itihaas"
        "testimonials"
        "recent-posts"
        "tech-stack"
        "now-playing";
      gap: 1rem;
    }

    .bento-item {
      padding: 1rem;
