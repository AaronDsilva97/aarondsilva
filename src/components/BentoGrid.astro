    }

    .bento-grid {
      gap: 0.75rem;
    }

    .bento-item {
      padding: 0.75rem;
      border-radius: 12px;
    }

    .hero {
      min-height: 180px;
    }

    .availability {
      min-height: 160px;
    }
  }
</style>